	author = {Paschoal, W. and Kumar, Sandeep and Jacobsson, D. and Johannes, A. and Jain, V. and Canali, C. M. and Pertsova, A. and Ronning, C. and Dick, K. A. and Samuelson, L. and Pettersson, H.},
