	journal = {Journal of Physics D: Applied Physics},
	author = {Ohdomari, Iwao},
	month = feb,
	year = {2008},
	pages = {043001}
}

@article{anders_sputtering_2015,
	title = {Sputtering of a metal nanofoam by {Au} ions},
