	month = mar,
	year = {2014},
	note = {00001},
	keywords = {Binary collision approximation, Dynamic computer simulation, Ion irradiation, Ion–solid interaction, nanostructures},
	pages = {23--33}
}

@article{anders_sputtering_2015,
	title = {Sputtering of a metal nanofoam by {Au} ions},
